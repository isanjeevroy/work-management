<% layout("/layouts/boilerplate")%>

<!-- Progress Overlay for PDF Generation -->
<div id="pdfProgressOverlay" class="fixed inset-0 bg-black bg-opacity-80 backdrop-blur-sm flex items-center justify-center z-50 hidden">
  <div class="bg-white rounded-2xl p-8 max-w-sm mx-4 text-center shadow-2xl">
    <div class="mb-4">
      <div class="inline-block w-12 h-12 border-4 border-indigo-200 border-t-indigo-600 rounded-full animate-spin"></div>
    </div>
    <h3 class="text-xl font-bold text-gray-800 mb-2">Generating PDF Report</h3>
    <p class="text-gray-600 mb-4">Please wait while your report is being prepared...</p>
    <div class="bg-gray-200 rounded-full h-2 mb-4">
      <div id="progressBar" class="bg-gradient-to-r from-indigo-500 to-purple-600 h-2 rounded-full transition-all duration-500" style="width: 0%"></div>
    </div>
    <button onclick="cancelExport()" class="px-4 py-2 bg-gray-300 hover:bg-gray-400 text-gray-700 rounded-lg transition-colors text-sm">
      Cancel
    </button>
  </div>
</div>

<div class="max-w-7xl mx-auto px-3 sm:px-6 py-6 sm:py-12 space-y-6 sm:space-y-8">
  <!-- Page Header -->
  <div class="text-center mb-8 sm:mb-12">
    <h1 class="text-2xl sm:text-4xl font-bold text-gray-900 mb-2 sm:mb-4">Your Projects</h1>
    <p class="text-lg sm:text-xl text-gray-600">Track and manage your ongoing work</p>
  </div>

  <!-- Jobs Container -->
  <div class="space-y-6 sm:space-y-8">
    <% for (let data of allData) { %>
      <% 
        const completedTasks = data.works.filter(work => work.status).length;
        const totalTasks = data.works.length;
        const progressPercentage = totalTasks > 0 ? Math.round((completedTasks / totalTasks) * 100) : 0;
      %>
      
      <!-- Job Card -->
      <div class="bg-white/80 backdrop-blur-md shadow-xl sm:shadow-2xl rounded-2xl sm:rounded-3xl border border-white/20 overflow-hidden hover:shadow-2xl sm:hover:shadow-3xl transition-all duration-300 sm:transform sm:hover:scale-[1.02]">
        
        <!-- Job Header -->
        <div class="bg-gradient-to-r from-indigo-500 to-purple-600 p-4 sm:p-6 text-white">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-4 sm:space-y-0">
            <div class="flex-1">
              <h2 class="text-xl sm:text-3xl font-bold mb-2 sm:mb-2 flex items-center">
                <i class="fas fa-briefcase mr-2 sm:mr-3 text-lg sm:text-xl"></i>
                <span class="break-words"><%= data.job_name %></span>
              </h2>
              <div class="flex flex-wrap items-center gap-3 sm:gap-6 text-indigo-100 text-sm sm:text-base">
                <div class="flex items-center">
                  <i class="fas fa-tasks mr-1 sm:mr-2"></i>
                  <span><%= totalTasks %> Total</span>
                </div>
                <div class="flex items-center">
                  <i class="fas fa-check-circle mr-1 sm:mr-2"></i>
                  <span><%= completedTasks %> Done</span>
                </div>
                <div class="flex items-center">
                  <i class="fas fa-clock mr-1 sm:mr-2"></i>
                  <span><%= totalTasks - completedTasks %> Pending</span>
                </div>
              </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="flex items-center justify-between sm:justify-end sm:space-x-3">
              <div class="text-center sm:text-right">
                <div class="text-2xl sm:text-3xl font-bold"><%= progressPercentage %>%</div>
                <div class="text-xs sm:text-sm text-indigo-100">Complete</div>
              </div>
              <div class="flex flex-row sm:flex-col space-x-2 sm:space-x-0 sm:space-y-2 ml-4">
                <button onclick="startExportProcess('<%= data._id %>')" 
                   class="flex items-center px-3 py-2 sm:px-4 sm:py-2 bg-white/20 backdrop-blur-sm text-white rounded-lg sm:rounded-xl hover:bg-white/30 transition-all duration-300 font-medium text-sm">
                   <i class="fas fa-print mr-1 sm:mr-2"></i>
                   <span class="hidden sm:inline">Export</span>
                </button>
                <a href="/delete/<%= data._id %>" 
                   class="flex items-center px-3 py-2 sm:px-4 sm:py-2 bg-red-500/80 backdrop-blur-sm text-white rounded-lg sm:rounded-xl hover:bg-red-600 transition-all duration-300 font-medium text-sm">
                   <i class="fas fa-trash mr-1 sm:mr-2"></i>
                   <span class="hidden sm:inline">Delete</span>
                </a>
              </div>
            </div>
          </div>
          
          <!-- Progress Bar -->
          <div class="mt-4">
            <div class="flex justify-between text-xs sm:text-sm text-indigo-100 mb-2">
              <span>Progress</span>
              <span><%= completedTasks %>/<%= totalTasks %> tasks</span>
            </div>
            <div class="w-full bg-white/20 rounded-full h-2 sm:h-3">
              <div class="bg-white rounded-full h-2 sm:h-3 transition-all duration-500" style="width: <%= progressPercentage %>%"></div>
            </div>
          </div>
        </div>

        <!-- Job Content (keeping existing content) -->
        <div class="p-4 sm:p-6">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 sm:gap-8">
            
            <!-- Completed Tasks Column -->
            <div class="space-y-3 sm:space-y-4">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-2 sm:space-y-0">
                <h3 class="text-lg sm:text-2xl font-bold text-gray-800 flex items-center">
                  <div class="w-3 h-3 sm:w-4 sm:h-4 bg-green-500 rounded-full mr-2 sm:mr-3"></div>
                  Completed Tasks
                </h3>
                <span class="bg-green-100 text-green-800 px-2 sm:px-3 py-1 rounded-full text-xs sm:text-sm font-semibold w-fit">
                  <%= completedTasks %> done
                </span>
              </div>
              
              <div class="bg-green-50 rounded-xl sm:rounded-2xl p-4 sm:p-6 min-h-[200px] sm:min-h-[300px]">
                <% if (data.works.filter(work => work.status).length === 0) { %>
                  <div class="text-center py-8 sm:py-12">
                    <i class="fas fa-clipboard-check text-3xl sm:text-4xl text-gray-300 mb-3 sm:mb-4"></i>
                    <p class="text-gray-500 text-sm sm:text-base">No completed tasks yet</p>
                  </div>
                <% } else { %>
                  <div class="space-y-2 sm:space-y-3">
                    <% data.works.forEach(work => { %>
                      <% if (work.status) { %>
                        <div class="group bg-white rounded-lg sm:rounded-xl p-3 sm:p-4 shadow-sm border border-green-100 hover:shadow-md transition-all duration-300">
                          <div class="flex items-center justify-between">
                            <div class="flex items-center flex-1 min-w-0">
                              <div class="w-5 h-5 sm:w-6 sm:h-6 bg-green-500 rounded-full flex items-center justify-center mr-2 sm:mr-3 flex-shrink-0">
                                <i class="fas fa-check text-white text-xs"></i>
                              </div>
                              <p class="text-gray-800 font-medium flex-1 text-sm sm:text-base truncate pr-2"><%= work.name %></p>
                              <div class="text-xs text-green-600 bg-green-100 px-2 py-1 rounded-full hidden sm:block">
                                <i class="fas fa-calendar-check mr-1"></i>
                                Completed
                              </div>
                            </div>
                            <a href="/job/<%= data._id %>/work/<%= work._id %>/update" 
                               class="ml-2 text-orange-600 hover:text-orange-800 opacity-100 sm:opacity-0 group-hover:opacity-100 transition-all duration-300 font-medium text-sm flex-shrink-0">
                               <i class="fas fa-undo mr-1"></i>
                               <span class="hidden sm:inline">Reopen</span>
                            </a>
                          </div>
                        </div>
                      <% } %>
                    <% }); %>
                  </div>
                <% } %>
              </div>
            </div>

            <!-- Pending Tasks Column -->
            <div class="space-y-3 sm:space-y-4">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-2 sm:space-y-0">
                <h3 class="text-lg sm:text-2xl font-bold text-gray-800 flex items-center">
                  <div class="w-3 h-3 sm:w-4 sm:h-4 bg-yellow-500 rounded-full mr-2 sm:mr-3"></div>
                  Pending Tasks
                </h3>
                <span class="bg-yellow-100 text-yellow-800 px-2 sm:px-3 py-1 rounded-full text-xs sm:text-sm font-semibold w-fit">
                  <%= totalTasks - completedTasks %> pending
                </span>
              </div>
              
              <div class="bg-yellow-50 rounded-xl sm:rounded-2xl p-4 sm:p-6 min-h-[200px] sm:min-h-[300px]">
                <!-- Add New Task Form -->
                <div class="mb-4 sm:mb-6">
                  <form method="POST" action="/job/<%= data._id %>" class="space-y-3">
                    <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-3">
                      <div class="flex-1 relative">
                        <input 
                          type="text" 
                          name="name" 
                          id="name-<%= data._id %>" 
                          required
                          placeholder="Add a new task..."
                          class="w-full rounded-lg sm:rounded-xl border-2 border-gray-200 px-3 sm:px-4 py-2 sm:py-3 text-gray-900 placeholder-gray-400 focus:border-yellow-500 focus:ring-2 sm:focus:ring-4 focus:ring-yellow-100 focus:outline-none transition-all duration-300 text-sm sm:text-base"
                        />
                        <i class="fas fa-plus absolute right-3 sm:right-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                      </div>
                      <button 
                        type="submit"
                        class="bg-gradient-to-r from-yellow-500 to-orange-500 text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg sm:rounded-xl font-semibold hover:shadow-lg transform hover:scale-105 transition-all duration-300 flex items-center justify-center text-sm sm:text-base">
                        <i class="fas fa-plus mr-1 sm:mr-2"></i>
                        Add Task
                      </button>
                    </div>
                  </form>
                </div>

                <!-- Pending Tasks List -->
                <% if (data.works.filter(work => !work.status).length === 0) { %>
                  <div class="text-center py-8 sm:py-12">
                    <i class="fas fa-check-double text-3xl sm:text-4xl text-gray-300 mb-3 sm:mb-4"></i>
                    <p class="text-gray-500 mb-2 text-sm sm:text-base">All tasks completed!</p>
                    <p class="text-xs sm:text-sm text-gray-400">Add a new task to get started</p>
                  </div>
                <% } else { %>
                  <div class="space-y-2 sm:space-y-3">
                    <% data.works.forEach(work => { %>
                      <% if (!work.status) { %>
                        <div class="group bg-white rounded-lg sm:rounded-xl p-3 sm:p-4 shadow-sm border border-yellow-100 hover:shadow-md transition-all duration-300">
                          <div class="flex items-center justify-between">
                            <div class="flex items-center flex-1 min-w-0">
                              <div class="w-5 h-5 sm:w-6 sm:h-6 bg-yellow-500 rounded-full flex items-center justify-center mr-2 sm:mr-3 flex-shrink-0">
                                <i class="fas fa-clock text-white text-xs"></i>
                              </div>
                              <p class="text-gray-800 font-medium flex-1 text-sm sm:text-base truncate pr-2"><%= work.name %></p>
                              <div class="text-xs text-yellow-600 bg-yellow-100 px-2 py-1 rounded-full hidden sm:block">
                                <i class="fas fa-hourglass-half mr-1"></i>
                                In Progress
                              </div>
                            </div>
                            <div class="ml-2 flex space-x-1 sm:space-x-2 opacity-100 sm:opacity-0 group-hover:opacity-100 transition-all duration-300">
                              <a href="/job/<%= data._id %>/work/<%= work._id %>/update" 
                                 class="text-green-600 hover:text-green-800 font-medium px-2 sm:px-3 py-1 rounded-md sm:rounded-lg bg-green-100 hover:bg-green-200 transition-all duration-300 text-xs sm:text-sm flex-shrink-0">
                                 <i class="fas fa-check"></i>
                                 <span class="hidden sm:inline ml-1">Complete</span>
                              </a>
                              <a href="/job/<%= data._id %>/work/<%= work._id %>/delete" 
                                 class="text-red-600 hover:text-red-800 font-medium px-2 sm:px-3 py-1 rounded-md sm:rounded-lg bg-red-100 hover:bg-red-200 transition-all duration-300 text-xs sm:text-sm flex-shrink-0">
                                 <i class="fas fa-trash"></i>
                                 <span class="hidden sm:inline ml-1">Remove</span>
                              </a>
                            </div>
                          </div>
                        </div>
                      <% } %>
                    <% }); %>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <!-- Rest of existing code remains the same -->
  <!-- Empty State -->
  <% if (allData.length === 0) { %>
    <div class="text-center py-12 sm:py-20">
      <div class="bg-white/80 backdrop-blur-md rounded-2xl sm:rounded-3xl p-8 sm:p-12 shadow-xl border border-white/20">
        <i class="fas fa-briefcase text-4xl sm:text-6xl text-gray-300 mb-4 sm:mb-6"></i>
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-3 sm:mb-4">No Projects Yet</h2>
        <p class="text-lg sm:text-xl text-gray-600 mb-6 sm:mb-8">Create your first project to get started with WorkFlow Pro</p>
        <a href="/newjob" 
           class="inline-flex items-center px-6 sm:px-8 py-3 sm:py-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-lg sm:rounded-xl font-semibold hover:shadow-2xl transform hover:scale-105 transition-all duration-300">
           <i class="fas fa-plus mr-2 sm:mr-3"></i>
           Create New Project
        </a>
      </div>
    </div>
  <% } %>
</div>

<!-- Enhanced Pagination -->
<% if (totalPages > 1) { %>
  <div class="flex justify-center items-center px-3 sm:px-6 mt-8 sm:mt-12">
    <div class="bg-white/80 backdrop-blur-md rounded-xl sm:rounded-2xl px-4 sm:px-6 py-3 sm:py-4 shadow-xl border border-white/20 w-full max-w-2xl">
      <div class="flex items-center justify-center space-x-2 sm:space-x-4">
        
        <!-- Previous Button -->
        <% if (currentPage > 1) { %>
          <a href="?page=<%= currentPage - 1 %>" 
             class="flex items-center px-3 sm:px-6 py-2 sm:py-3 bg-gradient-to-r from-indigo-500 to-purple-500 text-white rounded-lg sm:rounded-xl hover:shadow-lg transform hover:scale-105 transition-all duration-300 font-medium text-sm sm:text-base">
             <i class="fas fa-chevron-left mr-1 sm:mr-2"></i>
             <span class="hidden sm:inline">Previous</span>
          </a>
        <% } else { %>
          <span class="flex items-center px-3 sm:px-6 py-2 sm:py-3 bg-gray-200 text-gray-400 rounded-lg sm:rounded-xl cursor-not-allowed font-medium text-sm sm:text-base">
             <i class="fas fa-chevron-left mr-1 sm:mr-2"></i>
             <span class="hidden sm:inline">Previous</span>
          </span>
        <% } %>

        <!-- Page Numbers -->
        <div class="flex items-center space-x-1 sm:space-x-2 overflow-x-auto">
          <% for (let i = Math.max(1, currentPage - 1); i <= Math.min(totalPages, currentPage + 1); i++) { %>
            <% if (i === currentPage) { %>
              <span class="px-3 sm:px-4 py-2 bg-gradient-to-r from-indigo-500 to-purple-500 text-white rounded-lg font-bold text-sm sm:text-base">
                <%= i %>
              </span>
            <% } else { %>
              <a href="?page=<%= i %>" 
                 class="px-3 sm:px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-all duration-300 font-medium text-sm sm:text-base">
                <%= i %>
              </a>
            <% } %>
          <% } %>
        </div>

        <!-- Next Button -->
        <% if (currentPage < totalPages) { %>
          <a href="?page=<%= currentPage + 1 %>" 
             class="flex items-center px-3 sm:px-6 py-2 sm:py-3 bg-gradient-to-r from-indigo-500 to-purple-500 text-white rounded-lg sm:rounded-xl hover:shadow-lg transform hover:scale-105 transition-all duration-300 font-medium text-sm sm:text-base">
             <span class="hidden sm:inline">Next</span>
             <i class="fas fa-chevron-right ml-1 sm:ml-2"></i>
          </a>
        <% } else { %>
          <span class="flex items-center px-3 sm:px-6 py-2 sm:py-3 bg-gray-200 text-gray-400 rounded-lg sm:rounded-xl cursor-not-allowed font-medium text-sm sm:text-base">
             <span class="hidden sm:inline">Next</span>
             <i class="fas fa-chevron-right ml-1 sm:ml-2"></i>
          </span>
        <% } %>
      </div>
      
      <!-- Page Info -->
      <div class="text-center mt-2 sm:mt-3 text-xs sm:text-sm text-gray-600">
        Page <%= currentPage %> of <%= totalPages %>
      </div>
    </div>
  </div>
<% } %>

<!-- Quick Actions Floating Button -->
<div class="fixed bottom-6 sm:bottom-8 right-4 sm:right-8 z-50">
  <a href="/newjob" 
     class="flex items-center justify-center w-14 h-14 sm:w-16 sm:h-16 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-full shadow-xl sm:shadow-2xl hover:shadow-2xl sm:hover:shadow-3xl transform hover:scale-110 transition-all duration-300">
     <i class="fas fa-plus text-lg sm:text-xl"></i>
  </a>
</div>

