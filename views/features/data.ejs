<% layout("/layouts/boilerplate")%>

<div class="max-w-5xl mx-auto px-4 py-8 space-y-8">
  <% for (let data of allData) { %>
    <div class="bg-white shadow-md rounded-2xl p-6 border border-gray-200">
      
      <!-- Job Header -->
      <div class="flex items-center justify-between mb-4">
        <h1 class="text-2xl font-bold text-gray-800"><%= data.job_name %></h1>
        <div class="flex space-x-3">
          <a href="/delete/<%= data._id %>" 
             class="text-red-600 font-medium hover:underline">
             Delete
          </a>
          <a href="/print/<%= data._id %>" 
             class="text-blue-600 font-medium hover:underline">
             Print
          </a>
        </div>
      </div>

      <!-- Status Columns -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        
        <!-- Completed -->
        <div class="bg-green-50 rounded-xl p-4">
          <h4 class="text-lg font-semibold text-green-700 mb-3">✅ Completed</h4>
          <ul class="space-y-2">
            <% data.works.forEach(work => { %>
              <% if (work.status) { %>
                <li class="flex justify-between items-center bg-white border rounded-lg px-3 py-2 shadow-sm">
                  <p class="text-gray-800"><%= work.name %></p>
                  <a href="/job/<%= data._id %>/work/<%= work._id %>/update" 
                     class="text-sm text-red-600 hover:underline">
                     Undo
                  </a>
                </li>
              <% } %>
            <% }); %>
          </ul>
        </div>

        <!-- Pending -->
        <div class="bg-yellow-50 rounded-xl p-4">
          <h4 class="text-lg font-semibold text-yellow-700 mb-3">⏳ Pending</h4>
          <ul class="space-y-2">
            <% data.works.forEach(work => { %>
              <% if (!work.status) { %>
                <li class="flex justify-between items-center bg-white border rounded-lg px-3 py-2 shadow-sm">
                  <p class="text-gray-800"><%= work.name %></p>
                  <div class="flex space-x-3">
                    <a href="/job/<%= data._id %>/work/<%= work._id %>/update" 
                       class="text-sm text-green-600 hover:underline">
                       Done
                    </a>
                    <a href="/job/<%= data._id %>/work/<%= work._id %>/delete" 
                       class="text-sm text-red-600 hover:underline">
                       Delete
                    </a>
                  </div>
                </li>
              <% } %>
            <% }); %>
          </ul>

          <!-- Add Work Form -->
          <form method="POST" action="/job/<%= data._id %>" class="mt-4 flex space-x-2">
            <input 
              type="text" 
              name="name" 
              id="name" 
              required
              placeholder="Add new work..."
              class="flex-1 rounded-lg border-gray-300 px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none"
            />
            <button 
              type="submit"
              class="bg-blue-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-blue-700 transition-colors">
              Add
            </button>
          </form>
        </div>

      </div>
    </div>
  <% } %>
</div>

<!-- Pagination -->
<div class="flex justify-center space-x-4 mt-6">
  <% if (currentPage > 1) { %>
    <a href="?page=<%= currentPage - 1 %>" 
       class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition">
       Previous
    </a>
  <% } %>

  <% if (currentPage < totalPages) { %>
    <a href="?page=<%= currentPage + 1 %>" 
       class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition">
       Next
    </a>
  <% } %>
</div>
