<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Report - <%= data.job_name %></title>
    <link href="/css/styles.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/print.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
</head>
<body class="bg-gray-100 font-sans">
    <div class="print-container bg-white shadow-2xl">
        <!-- Header Section -->
        <div class="border-b-4 border-gray-800 pb-6 mb-8">
            <div class="flex items-center justify-between">
                <!-- Logo/Brand Section -->
                <div class="flex items-center space-x-3">
                    <div class="w-12 h-12 bg-gradient-to-r from-gray-700 to-gray-900 rounded-lg flex items-center justify-center">
                        <i class="fas fa-briefcase text-white text-xl"></i>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold text-gray-800">WorkFlow Pro</h1>
                        <p class="text-sm text-gray-600">Project Report</p>
                    </div>
                </div>
                
                <!-- Date Section -->
                <div class="text-right">
                    <div class="bg-gray-100 px-4 py-2 rounded-lg border-2 border-gray-300">
                        <p class="text-sm text-gray-600 font-medium">Generated On</p>
                        <p class="text-lg font-bold text-gray-800">
                            <%= new Date().toDateString() %>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Project Title Section -->
        <div class="mb-8 text-center">
            <div class="inline-block bg-gradient-to-r from-gray-50 to-gray-100 px-8 py-4 rounded-2xl border-2 border-gray-200 shadow-sm">
                <h2 class="text-3xl font-bold text-gray-800 mb-2"><%= data.job_name %></h2>
                <div class="flex items-center justify-center space-x-6 text-gray-600">
                    <% 
                        const completedTasks = data.works.filter(work => work.status).length;
                        const pendingTasks = data.works.filter(work => !work.status).length;
                        const totalTasks = data.works.length;
                        const completionRate = totalTasks > 0 ? Math.round((completedTasks / totalTasks) * 100) : 0;
                    %>
                    <div class="flex items-center">
                        <i class="fas fa-tasks mr-2 text-gray-500"></i>
                        <span class="font-semibold"><%= totalTasks %> Total Tasks</span>
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-chart-pie mr-2 text-gray-500"></i>
                        <span class="font-semibold"><%= completionRate %>% Complete</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Progress Bar Section -->
        <div class="mb-8">
            <div class="bg-gray-100 rounded-2xl p-6 border-2 border-gray-200">
                <div class="flex items-center justify-between mb-3">
                    <h3 class="text-lg font-bold text-gray-700">Project Progress</h3>
                    <span class="text-2xl font-bold text-gray-800"><%= completionRate %>%</span>
                </div>
                <div class="w-full bg-gray-300 rounded-full h-6 shadow-inner">
                    <div class="bg-gradient-to-r from-gray-600 to-gray-800 h-6 rounded-full transition-all duration-500 shadow-sm" 
                         style="width: <%= completionRate %>%">
                    </div>
                </div>
                <div class="flex justify-between mt-3 text-sm text-gray-600">
                    <span><%= completedTasks %> Completed</span>
                    <span><%= pendingTasks %> Remaining</span>
                </div>
            </div>
        </div>

        <!-- Tasks Sections -->
        <div class="grid grid-cols-2 gap-8 mb-8">
            <!-- Completed Tasks -->
            <div class="bg-green-50 rounded-2xl border-2 border-green-200 overflow-hidden">
                <!-- Completed Header -->
                <div class="bg-gradient-to-r from-green-600 to-green-700 text-white p-4">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <i class="fas fa-check-circle text-2xl mr-3"></i>
                            <h3 class="text-xl font-bold">Completed Tasks</h3>
                        </div>
                        <div class="bg-white/20 px-3 py-1 rounded-full">
                            <span class="font-bold text-sm"><%= completedTasks %></span>
                        </div>
                    </div>
                </div>
                
                <!-- Completed Tasks List -->
                <div class="p-6">
                    <% if (completedTasks === 0) { %>
                        <div class="text-center py-8">
                            <i class="fas fa-clipboard-check text-4xl text-gray-300 mb-3"></i>
                            <p class="text-gray-500 font-medium">No completed tasks yet</p>
                        </div>
                    <% } else { %>
                        <div class="completed-counter space-y-3">
                            <% data.works.forEach(work => { %>
                                <% if (work.status) { %>
                                    <div class="flex items-start space-x-3 bg-white rounded-lg p-3 border border-green-200 shadow-sm">
                                        <div class="flex-shrink-0 w-6 h-6 bg-green-500 rounded-full flex items-center justify-center mt-0.5">
                                            <i class="fas fa-check text-white text-xs"></i>
                                        </div>
                                        <p class="task-counter flex-1 text-gray-800 font-medium leading-relaxed"><%= work.name %></p>
                                    </div>
                                <% } %>
                            <% }); %>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Pending Tasks -->
            <div class="bg-yellow-50 rounded-2xl border-2 border-yellow-200 overflow-hidden">
                <!-- Pending Header -->
                <div class="bg-gradient-to-r from-yellow-600 to-orange-600 text-white p-4">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <i class="fas fa-clock text-2xl mr-3"></i>
                            <h3 class="text-xl font-bold">Pending Tasks</h3>
                        </div>
                        <div class="bg-white/20 px-3 py-1 rounded-full">
                            <span class="font-bold text-sm"><%= pendingTasks %></span>
                        </div>
                    </div>
                </div>
                
                <!-- Pending Tasks List -->
                <div class="p-6">
                    <% if (pendingTasks === 0) { %>
                        <div class="text-center py-8">
                            <i class="fas fa-check-double text-4xl text-gray-300 mb-3"></i>
                            <p class="text-gray-500 font-medium">All tasks completed!</p>
                        </div>
                    <% } else { %>
                        <div class="pending-counter space-y-3">
                            <% data.works.forEach(work => { %>
                                <% if (!work.status) { %>
                                    <div class="flex items-start space-x-3 bg-white rounded-lg p-3 border border-yellow-200 shadow-sm">
                                        <div class="flex-shrink-0 w-6 h-6 bg-yellow-500 rounded-full flex items-center justify-center mt-0.5">
                                            <i class="fas fa-hourglass-half text-white text-xs"></i>
                                        </div>
                                        <p class="task-counter flex-1 text-gray-800 font-medium leading-relaxed"><%= work.name %></p>
                                    </div>
                                <% } %>
                            <% }); %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Summary Statistics -->
        <div class="bg-gray-50 rounded-2xl border-2 border-gray-200 p-6 mb-8">
            <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                <i class="fas fa-chart-bar mr-3 text-gray-600"></i>
                Project Summary
            </h3>
            <div class="grid grid-cols-4 gap-6">
                <div class="text-center">
                    <div class="text-3xl font-bold text-gray-800 mb-1"><%= totalTasks %></div>
                    <div class="text-sm text-gray-600 font-medium">Total Tasks</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-green-600 mb-1"><%= completedTasks %></div>
                    <div class="text-sm text-gray-600 font-medium">Completed</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-yellow-600 mb-1"><%= pendingTasks %></div>
                    <div class="text-sm text-gray-600 font-medium">Pending</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-blue-600 mb-1"><%= completionRate %>%</div>
                    <div class="text-sm text-gray-600 font-medium">Progress</div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="border-t-2 border-gray-200 pt-6 mt-8">
            <div class="flex items-center justify-between text-sm text-gray-600">
                <div class="flex items-center space-x-4">
                    <div class="flex items-center">
                        <i class="fas fa-calendar mr-2"></i>
                        <span>Generated: <%= new Date().toLocaleDateString() %></span>
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-clock mr-2"></i>
                        <span><%= new Date().toLocaleTimeString() %></span>
                    </div>
                </div>
                <div class="text-right">
                    <div class="font-bold text-gray-800">WorkFlow Pro</div>
                    <div>Project Management System</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Print Button (Hidden when printing) -->
    <div class="no-print fixed bottom-6 right-6 z-50">
        <button onclick="window.print()" 
                class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-6 py-3 rounded-full shadow-2xl hover:shadow-3xl transform hover:scale-110 transition-all duration-300 flex items-center space-x-2">
            <i class="fas fa-print"></i>
            <span class="font-semibold">Print Report</span>
        </button>
    </div>
</body>
</html>
